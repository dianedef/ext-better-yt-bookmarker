{
  "manifest_version": 3,
  "name": "YouTube Bookmarker",
  "version": "1.0",
  "description": "Marque-pages pour les vid√©os YouTube avec notes et horodatages",
  "permissions": [
    "storage",
    "tabs",
    "activeTab"
  ],
  "host_permissions": [
    "https://www.youtube.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "width": 800,
    "height": 600
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://www.youtube.com/*"],
      "js": ["contentScript.js"],
      "css": ["styles.css"]
    }
  ],
  "options_page": "options.html"
}